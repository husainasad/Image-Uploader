<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload to Server"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tagHeading"
        app:layout_constraintStart_toStartOf="@+id/tagHeading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <Spinner
        android:id="@+id/tagSelect"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:autofillHints="Eg. Food"
        android:contentDescription="Add tag to the image"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/uploadBtn"
        app:layout_constraintEnd_toEndOf="@+id/tagHeading"
        app:layout_constraintStart_toStartOf="@+id/tagHeading"
        app:layout_constraintTop_toBottomOf="@+id/tagHeading"
        app:layout_constraintVertical_bias="0.368" />

    <TextView
        android:id="@+id/tagHeading"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Select Image Tag"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469" />

</androidx.constraintlayout.widget.ConstraintLayout>